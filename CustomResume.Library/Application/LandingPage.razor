@using CustomResumeBlazor.Domain
@using CustomResumeBlazor.Infrastructure

@if (hasLoaded)
{
    <PageTitle>@mainPage?.Title</PageTitle>
}
else
{
    <PageTitle>Loading...</PageTitle>
}

<MudGrid Class="d-flex justify-center">
    @if (hasLoaded)
    {
        <MudItem>
            <MudImage ObjectFit="ObjectFit.Fill" Height="250" Width="200" Src="@mainPage?.ImageRoute" Alt="Heahshot" Elevation="25" Class="rounded-lg" />
        </MudItem>
        <MudItem>
            <MudText Typo="Typo.h3" GutterBottom="true">@mainPage?.Title</MudText>
            @foreach (var paragraph in mainPage?.Paragraphs ?? Enumerable.Empty<string>())
            {
                <MudText Class="mb-4">@paragraph</MudText>
            }
        </MudItem>
    }
    else
    {
        <MudItem>
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="250px" Width="200px" Class="rounded-lg" />
        </MudItem>
        <MudItem>
            <MudSkeleton SkeletonType="SkeletonType.Text" Width="200" Lines="1" />
            @foreach (var _ in Enumerable.Range(0, 3))
            {
                <MudSkeleton SkeletonType="SkeletonType.Text" Width="200" Lines="4" Class="mb-4" />
            }
        </MudItem>
    }
</MudGrid>

