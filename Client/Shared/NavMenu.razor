@using CustomResumeBlazor.Domain.Mappers

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AccountCircle">About</MudNavLink>

    @if (hasLoaded)
    {
        foreach (var pageDetails in sortedOtherPages)
        {
            <MudNavLink Href="@RouteMapper.GetAllCardsRoute(pageDetails.Endpoint)" Match="NavLinkMatch.All" Icon="@IconMapper.GetIcon(pageDetails.Icon)">@pageDetails.Title</MudNavLink>
        }
    }
    else
    {
        @foreach (var _ in Enumerable.Range(0, 3))
        {
            <MudNavLink Icon="@Icons.Material.Filled.IncompleteCircle">Loading...</MudNavLink>
        }
    }

</MudNavMenu>
