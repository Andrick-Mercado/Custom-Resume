@page "/activities"

<PageTitle>Activities</PageTitle>

<MudItem xs="12" md="12" Class="d-flex flex-wrap mt-4">
    @foreach (var project in ProjectTemplates)
    {
        <MudItem Class="d-flex flex-wrap mr-4 mb-8">
            <MudCard Square="true" Style="width:400px">
                @if (!string.IsNullOrEmpty(project.ImageRoute))
                {
                    <MudCardMedia Image="@project.ImageRoute" Height="100" />
                }
                <MudCardContent>
                    <MudText Typo="Typo.h5">@project.Title</MudText>
                    <MudText Typo="Typo.body2">@project.Description</MudText>
                    <MudText Typo="Typo.body2">@project.MoreInfo</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    }
</MudItem>

