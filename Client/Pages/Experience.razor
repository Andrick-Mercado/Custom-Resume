@page "/experience"

<PageTitle>Experience</PageTitle>

<MudItem xs="12" md="12" Class="d-flex flex-wrap mt-4">
    @foreach (var project in ExperienceTemplates)
    {
        <MudItem Class="d-flex flex-wrap mr-4 mb-8">
            <MudCard Square="true" Style="width:400px">
                <MudCardContent>
                    <MudText Typo="Typo.h5">@project.JobTitle</MudText>
                    <MudText Typo="Typo.body2">@project.JobDescription</MudText>
                    <MudText Typo="Typo.body2">@project.MoreInfo</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Share</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudItem>
