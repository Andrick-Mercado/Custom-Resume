@page "/"

<PageTitle>About</PageTitle>

<MudGrid Class="d-flex justify-center">
    <MudItem>
        @if (hasLoaded)
        {
            <MudImage ObjectFit="ObjectFit.Fill" Height="250" Width="200" Src="images/headshot1.jpg" Alt="Heahshot" Elevation="25" Class="rounded-lg" />
        }
        else
        {
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="250px" Width="200px" Class="rounded-lg" />
        }
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.h3" GutterBottom="true">About Me</MudText>
        @foreach (var paragraph in AboutMe.Paragraphs)
        {
            <MudText Class="mb-4">@paragraph</MudText>
        }
    </MudItem>
</MudGrid>